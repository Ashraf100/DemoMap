<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="0dp"
    card_view:cardBackgroundColor="#131313"
    android:layout_margin="8dp"
    card_view:contentPadding="2dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_base_camp_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:background="#131313"
            android:textSize="14dp"
            android:text="@string/base_name"
            android:textColor="#8cc227"
          />


        <TextView
            android:id="@+id/tv_date_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:background="#131313"
            android:text="Tuesday, March 7"
            android:textColor="#808080"
          />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_forecate"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/sun"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            />

        <TextView
            android:id="@+id/tv_base_celsius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_marginTop="55dp"
            android:text="1"
            android:layout_marginLeft="12dp"
            android:textColor="#ffff"
            android:textSize="30dp" />


        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="&#xb0;"
            android:textColor="#ffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="55dp"
            android:text="C"
            android:textColor="#ffff"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="18dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageView10"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="198dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/circle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_marginTop="61dp"
            android:text="Wind:"
            android:textColor="#dcdcdc" />

        <TextView
            android:id="@+id/tv_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="61dp"
            android:text="W 12mph"
            android:textColor="#808080" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/imageView13"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="93dp"
            android:layout_marginLeft="198dp"
            android:background="@drawable/circle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_marginTop="89dp"
            android:text="Humidity:"
            android:textColor="#dcdcdc" />

        <TextView
            android:id="@+id/tv_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="89dp"
            android:text="24%"
            android:textColor="#808080" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="198dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="109dp"
            android:background="@drawable/circle" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_marginTop="105dp"
            android:text="Percipitation:"
            android:textColor="#dcdcdc" />

        <TextView
            android:id="@+id/tv_percipitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="105dp"
            android:text="24%"
            android:textColor="#808080" />
    </LinearLayout>
</android.support.v7.widget.CardView>